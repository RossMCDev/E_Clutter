@model EClutter.Models.Item

@{
    ViewBag.Title = "New Clutter Case";
}

<div id="blue">
    <div class="container">
        <div class="row">
            <h3>New Clutter Case.</h3>
        </div>
    </div> 
</div>


            @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {<div class="container mtb">
        <div class="row">
            <div class="col-lg-12">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => Model.Area_ID)
                @Html.HiddenFor(model => Model.SubItem)


                <div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Add an Image</b></label>
                        <label class="btn btn-default btn-file">
                            Upload Image <input type="file" name="file" id="file">
                        </label>
                        @Html.ValidationMessageFor(model => model.CoverImage, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Size of clutter</b></label>
                        <div class="price-box">
                                <div class="price-slider">
                                    <div class="col-sm-12">
                                        <div id="slider2"> <h6 class="small">Small</h6> <a class="ui-slider-handle ui-state-default ui-corner-all" href="#" style="left: 50%;"></a><h1 class="large">Large</h1></div> 
                                    </div>
                                </div>
                           <br>
                        </div>
                
                    </div>

                        <div class="form-group">
                            <label class="control-label col-md-2"><b>Where in room</b></label>
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", Value = "" } })
                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-8">
                            <label class="control-label col-md-2"><b>Take Action</b></label>
                            <br><br>
                            <div class="form-group">
                                <div class="btn-group" data-toggle="buttons">
                                    <label class="btn btn-primary actionbtn">
                                        @Html.EditorFor(model => model.Dispose, new { htmlAttributes = new { @class = "form-control" } })
                                        <span><b>Dispose</b></span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="btn-group" data-toggle="buttons">
                                    <label class="btn btn-primary actionbtn">
                                        @Html.EditorFor(model => model.Sell, new { htmlAttributes = new { @class = "form-control"} })
                                        <span><b>Sell</b></span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="btn-group" data-toggle="buttons">
                                    <label class="btn btn-primary actionbtn">
                                        @Html.EditorFor(model => model.GiveAway, new { htmlAttributes = new { @class = "form-control"} })
                                        <span><b>Give Away</b></span>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group ">
                                <div class="btn-group" data-toggle="buttons">
                                    <label class="btn btn-primary actionbtn">
                                        @Html.EditorFor(model => model.Repurpose, new { htmlAttributes = new { @class = "form-control"} })
                                        <span><b>Repurpose</b></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                    <div class="price-form">
                        @Html.EditorFor(model => model.SpaceTaken, new { htmlAttributes = new { Value = 0, style = "visibility:hidden;" } })
                    </div><br>
                        <input type="submit" value="Enter" class="btn-lg" />
                        
                    </div>
                    <br><br>
                    <div>
                        @Html.ActionLink("Back to index", "Index")
                    </div>

                </div>
            </div>
        </div>}
    

